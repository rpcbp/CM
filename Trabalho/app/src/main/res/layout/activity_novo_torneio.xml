<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NovoTorneio">

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNome"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewNomeEquipa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumero"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/textViewNomeEquipa2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeEquipa1"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/textViewNomeEquipa3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeEquipa2"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/textViewNomeEquipa4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeEquipa3"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/equipas"
        android:layout_width="303dp"
        android:layout_height="72dp"
        android:onClick="Equipa"
        android:orderInCategory="100"
        android:text="ADICIONA EQUIPA"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeEquipa4"
        app:showAsAction="never"
        tools:layout_editor_absoluteX="41dp" />
    <Button
        android:id="@+id/classificacao"
        android:layout_width="303dp"
        android:layout_height="72dp"
        android:onClick="ResultadoEClassificacao"
        android:orderInCategory="100"
        android:text="RESULTADO/CLASSIFICAÃ‡AO"
        app:layout_constraintTop_toBottomOf="@+id/equipas"
        app:showAsAction="never"
        tools:layout_editor_absoluteX="41dp" />

</android.support.constraint.ConstraintLayout>